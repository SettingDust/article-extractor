{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "sourceRoot": "./src",
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitOverride": true,
    "sourceMap": true,
    "types": [
      "mocha",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "skipLibCheck": true
  }
}
